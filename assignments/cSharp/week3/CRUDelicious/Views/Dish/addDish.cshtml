@{
    ViewData["Title"] = "Add New Dish";
}
@model Dish

<h1>Add a New Dish!</h1>

<form action="/dish/createDish" method="post">
    <div class="row">
        <section>
            <label for="Chef">Chef's Name</label>
            <input type="text" name="Chef" id="">
            <span asp-validation-for="Chef"></span>
        </section>
        <section>
            <label for="Name">Name of Dish</label>
            <input type="text" name="Name" id="">
            <span asp-validation-for="Name"></span>
        </section>
        <section>
            <label for="Calories"># of Calories</label>
            <input type="int" name="Calories" id="">
            <span asp-validation-for="Calories"></span>
        </section>
    </div>
    <section>
        <label asp-for="Tastiness">Tastiness</label> 
        <select name="Tastiness" id="">
            <option value=""></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"></span>
    </section>
    <section>
            <label asp-for="Description"></label>    
            <textarea cols="55" rows="7" asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </section>
    <button>Add Dish</button>
</form>