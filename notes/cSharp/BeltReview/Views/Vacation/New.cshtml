@model Vacation

<div class="container w-75 mx-auto">
    <h2 class="text-center">New Vacation</h2>

    <form
        class="shadow p-3 rounded"
        asp-controller="Vacation"
        asp-action="Create"
        method="POST"
    >
        <div class="mb-3">
            <label asp-for="Destination"></label>
            <span asp-validation-for="Destination" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="Destination" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger font-weight-bold">
            </span>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="mb-3">
            <label asp-for="Summer"></label>
            <span asp-validation-for="Summer" class="text-danger font-weight-bold">
            </span>
            <input asp-for="Summer" />
        </div>
        <div class="mb-3">
            <label asp-for="Spring"></label>
            <span asp-validation-for="Spring" class="text-danger font-weight-bold">
            </span>
            <input asp-for="Spring" />
        </div>
        <div class="mb-3">
            <label asp-for="Winter"></label>
            <span asp-validation-for="Winter" class="text-danger font-weight-bold">
            </span>
            <input asp-for="Winter" />
        </div>
        <div class="mb-3">
            <label asp-for="Fall"></label>
            <span asp-validation-for="Fall" class="text-danger font-weight-bold">
            </span>
            <input asp-for="Fall" />
        </div>

        <button class="btn btn-sucess">Submit</button>
    </form>
</div>